/*
 * GPIO 配置单一数据源（X-Macro）
 *
 * 使用方式：
 *   在包含本文件前定义 GPIO_ITEM(name, port, pin, mode, init_level)
 *
 * 约定：
 *   - port: GPIO_PORT_A ~ GPIO_PORT_G
 *   - pin : GPIO_PIN(n)
 */

GPIO_ITEM(BOARD_LED,  GPIO_PORT_A, GPIO_PIN(8), MHAL_GPIO_MODE_OUT_PP,      MHAL_GPIO_LOW)
GPIO_ITEM(LED_DATA,   GPIO_PORT_E, GPIO_PIN(6), MHAL_GPIO_MODE_OUT_PP,      MHAL_GPIO_LOW)
GPIO_ITEM(LED_STATUS, GPIO_PORT_F, GPIO_PIN(6), MHAL_GPIO_MODE_OUT_PP,      MHAL_GPIO_LOW)
GPIO_ITEM(KEY_1,      GPIO_PORT_A, GPIO_PIN(0), MHAL_GPIO_MODE_IN_FLOATING, MHAL_GPIO_LOW)
